<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="654dp"
    android:background="@color/light_gray"
    android:paddingTop="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/third_state"
            android:textColor="@color/gray_text"
            android:layout_marginEnd="15dp"/>
        <TextView
            android:id="@+id/game_name_cont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_user"
            android:textColor="@color/gray_text"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/serve"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/gray_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/serve_to"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/green"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp">

            <ImageButton
                android:id="@+id/btn_cheese"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/cheese"
                android:layout_marginEnd="35dp"/>
            <ImageButton
                android:id="@+id/btn_bbq"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bbq"
                android:layout_marginEnd="35dp"/>
            <ImageButton
                android:id="@+id/btn_temple"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/temple"
                android:layout_marginEnd="35dp"/>
            <ImageButton
                android:id="@+id/btn_dessert"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/dessert"
                android:layout_marginEnd="35dp"/>
            <ImageButton
                android:id="@+id/btn_chili"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/chili"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp">

            <ImageButton
                android:id="@+id/btn_sheep"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/sheep"
                android:layout_marginEnd="35dp"/>
            <ImageButton
                android:id="@+id/btn_cow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/cow"
                android:layout_marginEnd="35dp"/>
            <ImageButton
                android:id="@+id/btn_shrimp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/shrimp"
                android:layout_marginEnd="35dp"/>
            <ImageButton
                android:id="@+id/btn_moose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/moose"
                android:layout_marginEnd="35dp"/>
            <ImageButton
                android:id="@+id/btn_bird"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/bird"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp">

            <ImageButton
                android:id="@+id/btn_radish"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/radish"
                android:layout_marginEnd="35dp"/>
            <ImageButton
                android:id="@+id/btn_glass"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/glas"
                android:layout_marginEnd="35dp"/>
            <ImageButton
                android:id="@+id/btn_pig"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/pig"
                android:layout_marginEnd="35dp"/>
            <ImageButton
                android:id="@+id/btn_fish"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/fish"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_next_serve"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_gravity="end"
        android:background="@drawable/default_btn"
        android:text="@string/next_step"
        android:textColor="@color/white"/>

</LinearLayout>