<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="654dp"
    android:background="@color/light_gray"
    android:paddingTop="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_state"
            android:textColor="@color/gray_text"
            android:layout_marginEnd="15dp"/>
        <TextView
            android:id="@+id/game_name_cont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_user"
            android:textColor="@color/gray_text"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/which_beer"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/gray_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_preview"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@color/dim_green"
            android:contentDescription="TODO" />

        <Button
            android:id="@+id/btn_open_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:background="@drawable/default_btn"
            android:paddingHorizontal="10dp"
            android:text="@string/img_beer"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/beer_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:autofillHints="autoFill"
            android:background="@drawable/edit_text_border"
            android:hint="@string/name_beer"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/gray_text"
            android:textColorHint="@color/gray_text"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_next_beer_name"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_gravity="end"
        android:background="@drawable/default_btn"
        android:text="@string/next_step"
        android:textColor="@color/white"
        android:textAllCaps="false"/>

</LinearLayout>