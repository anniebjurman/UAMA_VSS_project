<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="654dp"
    android:background="@color/light_gray"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="20dp"
    android:paddingEnd="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/summary"
        android:textColor="@color/gray_text"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_view_sum"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_marginEnd="20dp"
                android:background="@color/dim_green"
                android:contentDescription="@string/beer_img_description"/>

            <TextView
                android:id="@+id/sum_beer_name"
                android:layout_width="230dp"
                android:layout_height="115dp"
                android:gravity="center_vertical"
                android:text="@string/beer_name_PH"
                android:textColor="@color/gray_text"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/drink_button"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/bitter"
                    android:textColor="@color/green" />

                <TextView
                    android:id="@+id/bitter_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="@string/num_placeholder"
                    android:textColor="@color/green"
                    android:textSize="35sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/drink_button"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/fullness"
                    android:textColor="@color/green" />

                <TextView
                    android:id="@+id/fullness_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="@string/num_placeholder"
                    android:textColor="@color/green"
                    android:textSize="35sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:background="@drawable/drink_button"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/sweetness"
                    android:textColor="@color/green" />

                <TextView
                    android:id="@+id/sweetness_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="@string/num_placeholder"
                    android:textColor="@color/green"
                    android:textSize="35sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/serve_to_icon_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sum_served_to"
                android:textColor="@color/gray_text"
                android:layout_marginEnd="20dp"/>

<!--            <TextView-->
<!--                android:id="@+id/serve_to_sum"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="@string/description_PH"-->
<!--                android:background="@drawable/drink_button"-->
<!--                android:textColor="@color/green"-->
<!--                android:backgroundTint="@color/dim_green"-->
<!--                android:paddingHorizontal="10dp"-->
<!--                android:paddingVertical="5dp"/>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sum_described_as"
                android:textColor="@color/gray_text"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/sum_description_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/drink_button"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="@string/description_PH"
                    android:textColor="@color/green"
                    android:backgroundTint="@color/dim_green"/>

                <TextView
                    android:id="@+id/sum_description_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/drink_button"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="@string/description_PH"
                    android:textColor="@color/green"
                    android:backgroundTint="@color/dim_green"/>

                <TextView
                    android:id="@+id/sum_description_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/drink_button"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="@string/description_PH"
                    android:textColor="@color/green"
                    android:backgroundTint="@color/dim_green"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sum_description_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/drink_button"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="@string/description_PH"
                    android:textColor="@color/green"
                    android:backgroundTint="@color/dim_green"/>

                <TextView
                    android:id="@+id/sum_description_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/drink_button"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:text="@string/description_PH"
                    android:textColor="@color/green"
                    android:backgroundTint="@color/dim_green"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_save_analysis"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_gravity="end"
        android:background="@drawable/default_btn"
        android:text="@string/save_analysis"
        android:textColor="@color/white" />

</LinearLayout>